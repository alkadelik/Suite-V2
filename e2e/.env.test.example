# Base URL of the running app (local dev server or deployed staging)
E2E_BASE_URL=http://localhost:3001

# Staging API base URL
E2E_API_BASE_URL=https://bpi.leyyow.com/api/v2

# Test user credentials (dedicated test account with a store already created)
E2E_USER_EMAIL=test@example.com
E2E_USER_PASSWORD=testpassword123

# New user credentials (email-verified but has NOT created a store yet)
# Used for create-store and full new-user flow tests
E2E_NEW_USER_EMAIL=
E2E_NEW_USER_PASSWORD=

# Set to "true" to run tests that modify account state (bank details, KYC, etc.)
E2E_RUN_DESTRUCTIVE=false

# Test bank account details (for bank account resolution tests)
E2E_TEST_ACCOUNT_NUMBER=0123456789
E2E_TEST_BANK_NAME=Access Bank
